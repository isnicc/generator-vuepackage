/* component/app/index.wxss */
.shop-book-popup{
	padding-left: 30rpx;
}
.shop-book-popup .book-op-btn{
	margin:14rpx 0;
	background-color: #f63;
	border-radius: 6rpx;
	margin-right: 30rpx;
	color:#fff;
	line-height: 85rpx;
	height: 85rpx;
	font-size: 36rpx;
	text-align: center;
	box-sizing: border-box;
}
.shop-book-popup .book-popup-op{
}
.shop-book-popup .book-popup-op .intro{
	font-size: 26rpx;
	line-height: 28rpx;
	height: 28rpx;
	color:#999;
	margin-bottom: 20rpx;
}
.shop-book-popup .book-popup-op input{
	border:1rpx solid #ccc;
	font-size:30rpx;
	line-height:80rpx;
	padding:0 16rpx;
	margin-right:30rpx;
	border-radius:6rpx;
	height:80rpx;
	vertical-align: middle;
}
.shop-book-popup .title{
	font-size: 30rpx;
	color:#333;
	line-height: 90rpx;
	height: 90rpx;
	background-color: #fff;
	position: relative;
}
.shop-book-popup .title .close-box{
	color:#c1c1c1;
	line-height: 25rpx;
	position: absolute;
	right: 28rpx;
	display: block;
	top: 50%;
	transform: translate(-50%, -50%);
}

.shop-book-popup .title .close-box .icon{
	background:url(data:image/png;base64,) no-repeat;
	background-size: 25rpx auto;
	display: block;
	width: 25rpx;
	height: 25rpx;
}

.shop-book-popup .book-popup-feature{
	padding:13rpx 0 23rpx;
}
.book-popup-feature .item{
	display: block;
	line-height: 34rpx;
	margin-bottom: 14rpx;
}
.book-popup-feature .item:last-child{
	margin-bottom:0;
}
.book-popup-feature .item i{
	font-size: 22rpx;
	line-height: 32rpx;
	height: 32rpx;
	border:2rpx solid #f63;
	border-radius:4rpx;
	padding: 0 6rpx;
	color:#f63;
	margin-right: 12rpx;
	display: inline-block;
	vertical-align: middle;
}
.book-popup-feature .item span{
	font-size: 26rpx;
	line-height: 26rpx;
	margin-right: 10rpx;
	display: inline-block;
	color:#333;
	vertical-align: middle;
}
.shop-book{
	display: -webkit-box;
	padding:11rpx 30rpx;
	-webkit-box-pack:center;
	border-top:1rpx solid #e1e1e1;
	background-color: #fff;
	position: fixed;
	bottom:0;
	z-index: 9;
	box-sizing: border-box;
	width: 100%;
}
.shop-book .op-box{
	text-align: center;
	display:block;
	margin:0 40rpx;
}
.shop-book .op-box i.phone{
	background:url(data:image/png;base64,) no-repeat;
	background-size: 50rpx 50rpx;
	width: 50rpx;
	height: 50rpx;
	display: block;
}
.shop-book .op-box span{
	font-size: 22rpx;
	line-height: 22rpx;
	color:#666;
	margin-top: 6rpx;
	display: block;
}
.shop-book .book-btn{
	display: -webkit-box;
	-webkit-box-pack:center;
	-webkit-box-flex: 1;
	background-color: #ff6633;
	line-height: 80rpx;
	border-radius: 4rpx;
	color:#fff;
	font-size: 36rpx;
}
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 9;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
}